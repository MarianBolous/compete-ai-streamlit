[flake8]
max-line-length = 88
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    .streamlit,
    .ui_state,
    build,
    dist
ignore = 
    # Whitespace before ':' (conflicts with black)
    E203,
    # Line break before binary operator (conflicts with black)
    W503,
    # Line too long (handled by black)
    E501,
    # Module level import not at top of file (for version imports)
    E402
per-file-ignores =
    # Allow imports in __init__.py files
    __init__.py:F401
max-complexity = 10